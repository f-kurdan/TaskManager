@model TaskViewModel
@{
	ViewData["Title"] = "Create new task";
}

<h1>Create new task</h1>
<form asp-controller="Task" asp-action="Create" method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="CreationDate" value="" />
	<input type="hidden" asp-for="Author" value="" />
	<div class="form-group my-2">
		<input asp-for="Title" type="text" class="form-control" placeholder="Title">
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description">Description</label>
		<textarea asp-for="Description" class="form-control" rows="3"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group my-2">
		<label asp-for="Status">Status</label>
		<select asp-for="Status" class="form-control">
			<option></option>
			@foreach (var status in Model.Statuses)
			{
				<option>@status.Title</option>
			}
		</select>
		<span asp-validation-for="Status" class="text-danger"></span>
	</div>
	<div class="form-group my-2">
		<label asp-for="Performer">Performer</label>
		<select asp-for="Performer" class="form-control">
			<option></option>
			@foreach (var performer in Model.Performers)
			{
				<option>@performer</option>
			}
		</select>
		<span asp-validation-for="Performer" class="text-danger"></span>
	</div>
	<div class="form-group my-2">
		<label asp-for="TagIDs">Tags</label>
		<select asp-for="TagIDs" asp-items="Model.TagSelectList" multiple class="form-control">
			<option></option>
		</select>
		<span asp-validation-for="TagSelectList" class="text-danger"></span>
	</div>
	<div class="form-group my-2">
		<input type="submit" value="Create" class="btn btn-primary shadow-sm" />
	</div>
</form>
<div>
	<a asp-action="Index" class="btn btn-outline-secondary shadow-sm my-4">Back to List</a>
</div>

