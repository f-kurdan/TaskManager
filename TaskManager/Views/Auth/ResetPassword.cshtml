@model ResetViewModel
@{
	ViewData["Title"] = "Reset Password";
}
@if (Model != null && Model.IsPasswordReset)
{
	<div class="d-flex align-items-center justify-content-center">
		<div class="alert alert-success shadow-sm w-50 align-items-center " role="alert">
			Your password has been reset. Please <a asp-action="Login">click here to log in</a>
		</div>
	</div>
}
<h1 class="d-flex align-items-center justify-content-center mx-3">Reset Password</h1>
<div class="d-flex align-items-center justify-content-center">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" class="form-control" />
            <input type="hidden" asp-for="Token" class="form-control shadow-sm" />
            <div class="form-group my-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control shadow-sm" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control shadow-sm" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group my-0.5">
                <input type="submit" value="Create" class="btn btn-primary shadow-sm" />
            </div>
        </form>
</div>
