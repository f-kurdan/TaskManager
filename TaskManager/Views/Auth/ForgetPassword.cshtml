@model ForgetViewModel
@{
	ViewData["Title"] = "Forget Password";
}

@if (Model != null)
{
	@*@if (Model.IsEmailSend)
{
	<div class="d-flex align-items-center justify-content-center">
		<div class="alert alert-success shadow-sm w-50 d-flex align-items-center justify-content-center" role="alert">
			The link has been sent, please check your email to reset your password:)
		</div>
	</div>
}*@
	@if (!Model.IsUserVerified)
	{
		<div class="d-flex align-items-center justify-content-center">
			<div class="alert alert-danger shadow-sm w-50 d-flex align-items-center justify-content-center" role="alert">
				It seems that a user with such an email was not found. Please try again =^ᴥ^=
			</div>
		</div>
	}
	@if (Model.EmailResetLink != null)
	{
		<div class="d-flex align-items-center justify-content-center">
			<div class="alert alert-success shadow-sm w-50 d-flex align-items-center justify-content-center" role="alert">
				<a href="@Model.EmailResetLink">Click on this link to create new password<a>
			</div>
		</div>
	}
}
<div class="d-flex align-items-center justify-content-center my-3 ">
	<h4>
		Forgot password?
	</h4>
</div>
<div class="d-flex align-items-center justify-content-center">
	<div class="row d-flex align-items-center justify-content-center">
		<div class="col-lg-8">
			<form asp-controller="Auth" asp-action="ForgetPassword" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group col-lg-12">
					<p>
						Enter your email address below.
						<br /> We'll look for your account and send you an email to reset your password.
					</p>
				</div>
				<div class="form-group my-3 col-lg-12">
					<input asp-for="Email" class="form-control shadow-sm" placeholder="Email" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group my-3 col-lg-12">
					<input type="submit" value="Submit" class="btn btn-outline-primary shadow-sm" />
				</div>
			</form>
		</div>
	</div>
</div>

<div>
	@section Scripts {
		@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial");
		}
	}
	</div>