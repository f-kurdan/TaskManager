@model RegisterViewModel
@{
	ViewBag.Title = "Register";
}

<h1 class="d-flex align-items-center justify-content-center mx-3">Register</h1>
<form asp-action="Register" method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group row my-3">
		<label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
		<div class="col-sm-10">
			<input asp-for="Email" type="email" class="form-control" placeholder="Email">
			<span class="text-danger" asp-validation-for="Email"></span>
		</div>
	</div>
	<div class="form-group row my-3">
		<label asp-for="UserName" class="col-sm-2 col-form-label">User Name</label>
		<div class="col-sm-10">
			<input asp-for="UserName" type="text" class="form-control" placeholder="User Name">
			<span class="text-danger" asp-validation-for="UserName"></span>
		</div>
	</div>
	<div class="form-group row my-3">
		<label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
		<div class="col-sm-10">
			<input asp-for="Password" type="password" class="form-control" placeholder="Password">
			<span class="text-danger" asp-validation-for="Password"></span>
		</div>
	</div>
	<div class="form-group row my-3">
		<label asp-for="ConfirmPassword" class="col-sm-2 col-form-label">Confirm Password</label>
		<div class="col-sm-10">
			<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Password">
			<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
		</div>
	</div>
	<div class="form-group row my-3">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Sign in</button>
		</div>
	</div>
</form>